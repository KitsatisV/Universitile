@page
@model RegisterModel
@{
	ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<div class="row" style="margin:50px">
	<div class="col-md-4">
		<section>
			<form id="account" method="post">
				<h2>Register a new user</h2>
				<hr />
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-floating" style="margin:10px">
					<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
					<label asp-for="Input.Email" class="form-label"></label>
					<span asp-validation-for="Input.Email" class="text-danger"></span>
				</div>
				<div class="form-floating" style="margin:10px">
					<input asp-for="Input.Password" class="form-control" autocomplete="username" aria-required="true" />
					<label asp-for="Input.Password" class="form-label"></label>
					<span asp-validation-for="Input.Password" class="text-danger"></span>
				</div>
				<div class="form-floating" style="margin:10px">
					<select asp-for="Input.Role" class="form-control">
						<option value="Admin">Admin</option>
						<option value="Student">Student</option>
						<option value="Teacher">Teacher</option>
					</select>
					<label asp-for="Input.Role" class="form-label"></label>
					<span asp-validation-for="Input.Role" class="text-danger"></span>
				</div>
				<div style="margin:10px">
					<button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
				</div>
			</form>
		</section>
	</div>
</div>
