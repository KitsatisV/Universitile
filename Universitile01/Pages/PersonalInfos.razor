			MySqlDataReader rdr = sqlcmd.ExecuteReader();
			while (rdr.Read())
			{
				PersonalInfo stud = new PersonalInfo();
				stud.InfoId = (Int32)rdr["info_id"];
				var date = DateOnly.FromDateTime((DateTime)rdr["date_of_birth"]);
